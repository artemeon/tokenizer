{
    "type": "library",
    "license": "MIT",
    "name": "artemeon/tokenizer",
    "description": "Tokenizer for php",
    "keywords": [
        "Tokenizer"
    ],
    "authors": [
        {
            "name": "Dietmar Simons",
            "email": "dietmar.simons@artemeon.de",
            "homepage": "https://www.artemeon.de/",
            "role": "Developer"
        }
    ],
    "scripts": {
        "phpstan": "php ./vendor/bin/phpstan analyse --memory-limit=4G"
    },
    "require": {
        "php": "~8.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.10.59"
    },
    "autoload": {
        "psr-4": {
            "Artemeon\\Tokenizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Artemeon\\Tokenizer\\Tests\\": "tests/"
        }
    }
}
